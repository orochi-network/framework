    "logform": "^2.5.1",
    "mysql": "^2.18.1",
    "winston": "^3.11.0",
    "winston-transport": "4.7.0"
  },
  "peerDependencies": {
    "knex": "3.x"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
